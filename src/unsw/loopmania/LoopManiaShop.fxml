<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.Label?>
<?import javafx.geometry.Insets?>

<AnchorPane fx:id="anchorPaneRoot" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
   <VBox alignment="CENTER" spacing="10.0">
      <Label text="Shop">
         <font>
            <Font name="System Bold" size="25" />
         </font>
       </Label>
      <HBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
         <children>
            <GridPane fx:id="shopSlot" alignment="CENTER" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
               <columnConstraints>
                  <ColumnConstraints />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints />
               </rowConstraints>
               <children>
                              
               </children>
            </GridPane>
            <VBox alignment="CENTER" spacing="15">
               <children>
                  <HBox alignment="CENTER">
                     <children>
                        <!-- goldIcon -->
                        <ImageView id="moneyIcon"  xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" GridPane.columnIndex="1" GridPane.rowIndex="1">    
                           <image>
                              <Image url="@../../images/gold_pile.png"/>
                           </image>
                        </ImageView>
                        <Region prefWidth="10.0" HBox.hgrow="ALWAYS" />
                        <Label fx:id="goldValue">
                              <font>
                                 <Font name="System Bold" size="25" />
                              </font>
                        </Label>
                     </children>
                  </HBox>
                  <Label fx:id="numberOfItemsAllowed" text="I\n0">
                     <font>
                        <Font name="System Bold" size="25" />
                     </font>
                  </Label>
                  <Button fx:id="resumeButton" text="Resume" onAction="#resumeButtonAction"/>
               </children>
            </VBox>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="10.0" />
         </padding>
      </HBox>
      <padding>
            <Insets top="20.0" />
      </padding>
   </VBox>
</AnchorPane>