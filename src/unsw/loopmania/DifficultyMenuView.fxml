<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.Region?>




<!-- vertically stacked label and button -->
<VBox alignment="CENTER" spacing="40.0" prefHeight="563.0" prefWidth="433.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
   <children>
        <Label text="Select Difficulty">
            <font>
               <Font name="System Bold" size="30" />
            </font>
        </Label>
        <VBox alignment="CENTER" spacing="25.0">
            <RadioButton fx:id="standardModeButton" text="Standard">
                <font>
                    <Font name="System Bold" size="15" />
                </font>
            </RadioButton>
            <!-- dirty method to align radio buttons -->
            <RadioButton fx:id="survivalModeButton" text="Survival  ">
                <font>
                    <Font name="System Bold" size="15" />
                </font>
            </RadioButton>
            <RadioButton fx:id="beserkerModeButton" text="Beserker">
                <font>
                    <Font name="System Bold" size="15" />
                </font>
            </RadioButton>
            <RadioButton fx:id="confusingModeButton" text="Confusing">
                <font>
                    <Font name="System Bold" size="15" />
                </font>
            </RadioButton>
            <Label fx:id="modeDescription" prefHeight="57">
                <font>
                    <Font name="System Bold" size="15" />
                </font>
            </Label>
        </VBox>
        <HBox>
            <Region prefWidth="10.0" HBox.hgrow="ALWAYS" />
            <Button fx:id="backButton" text="Back" prefHeight="50" prefWidth="170" onAction="#switchToMainMenu">
                <font>
                    <Font name="System Bold" size="15" />
                </font>
            </Button>
            <Region prefWidth="10.0" HBox.hgrow="ALWAYS" />
            <Button fx:id="confirmButton" prefHeight="50" prefWidth="170" text="Confirm" onAction="#switchToGame">
                <font>
                    <Font name="System Bold" size="15" />
                </font>
            </Button>
            <Region prefWidth="10.0" HBox.hgrow="ALWAYS" />
        </HBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>