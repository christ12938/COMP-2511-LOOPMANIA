<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>


<!-- TODO = modify and expand the range of menus available from the menu menu, and develop game modes you can select when starting a new game -->

<!-- vertically stacked label and button -->
<VBox alignment="CENTER" spacing="100.0" prefHeight="563.0" prefWidth="433.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox>
         <ImageView id="gameLogo"  xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">    
            <image>
               <Image url="@../../images/logo.png"/>
            </image>
         </ImageView>
      </VBox>
      <VBox alignment="CENTER" spacing="20.0">
         <!-- clicking button should start/resume the game -->
         <Button fx:id="startGameButton" text="Start" prefHeight="50" prefWidth="170" onAction="#switchToGame">
            <font>
               <Font name="System Bold" size="15" />
            </font>
         </Button>
         <Button fx:id="quitGameButton" text="Quit" prefHeight="50" prefWidth="170" onAction="#quitGame">
            <font>
               <Font name="System Bold" size="15" />
            </font>
         </Button>
      </VBox>
   </children>
   <padding>
      <Insets left="20.0" right="20.0" />
   </padding>
</VBox>